<html>
    <head>
        <title>Shoe Stores</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/css/material-fullpalette.css">
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <div class="jumbotron">
            {% if stores is not empty %}
                <h1>Here are the stores that carry {{ brand.getName }}</h1>
                <ul>
                    {% for store in stores %}
                        <form action="/stores/{{ store.getId }}">
                            <button type="submit" class="btn btn-flat btn-primary">{{ store.getName }} <br> {{ store.getLocation }}</button>
                        </form>
                    {% endfor %}
                </ul>
            {% else %}
                <h1>No stores carry this brand</h1>
            {% endif %}
            <form action="/brands">
                <button type="submit" class="btn btn-flat btn-default">Back</button>
            </form>
            <form action="/">
                <button type="submit" class="btn btn-flat btn-default">Home</button>
            </form>
        </div>
    </body>
</html>
